{
  "name": "boilerplate",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "engines": {
    "npm": "please-use-yarn",
    "node": ">=22.0.0",
    "yarn": ">=1.19"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:cov": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "ts-node": "ts-node -r tsconfig-paths/register -r dotenv/config",
    "ts-node-esm": "node --import 'data:text/javascript,import { register } from \"node:module\"; import { pathToFileURL } from \"node:url\"; register(\"ts-node/esm\", pathToFileURL(\"./\"));'",
    "typeorm": "yarn ts-node-esm ./node_modules/.bin/typeorm -d ./src/config/typeorm.config.ts",
    "typeorm:cli": "yarn ts-node-esm ./node_modules/.bin/typeorm",
    "typeorm:prod": "node ./node_modules/.bin/typeorm -d ./dist/src/config/typeorm.config.js",
    "execute": "node dist/src/execute-script.js",
    "execute:dev": "yarn ts-node-esm src/execute-script.ts",
    "db:create": "npx tsx create-db.ts",
    "db:create:test": "NODE_ENV=test npx tsx create-db.ts",
    "db:drop": "npx tsx drop-db.ts",
    "db:drop:prod": "node dist/drop-db.js",
    "db:schema:drop": "yarn typeorm schema:drop",
    "db:migrate:create": "yarn typeorm:cli migration:create",
    "db:migrate:generate": "yarn typeorm migration:generate",
    "db:migrate:up": "yarn typeorm migration:run",
    "db:migrate:up:prod": "yarn typeorm:prod migration:run",
    "db:migrate:down": "yarn typeorm migration:revert",
    "db:migrate:down:prod": "yarn typeorm:prod migration:revert",
    "migrate_and_start": "yarn db:create; yarn db:migrate:up; yarn start",
    "migrate_and_start_prod": "node dist/create-db.js; yarn db:migrate:up:prod; yarn start:prod"
  },
  "dependencies": {
    "@golevelup/nestjs-rabbitmq": "^5.0.0",
    "@liaoliaots/nestjs-redis": "^10.0.0",
    "@nestjs/bull": "^11.0.4",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.0",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/mapped-types": "^2.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "@slack/webhook": "^6.1.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "amqplib": "^0.10.3",
    "axios": "^1.1.3",
    "bull": "^4.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "file-type": "^18.0.0",
    "ioredis": "^5.2.3",
    "nest-commander": "3.10.0",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "ts-jest-resolver": "^2.0.0",
    "typeorm": "^0.3.10",
    "web3": "4.0.1-alpha.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0-0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.0.0",
    "@types/amqplib": "^0.10.0",
    "@types/bull": "^3.15.9",
    "@types/express": "^4.17.13",
    "@types/inquirer": "^8.1.3",
    "@types/jest": "^29.0.0",
    "@types/jest-when": "^3.5.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "dotenv": "^16.0.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^29.0.0",
    "jest-extended": "^4.0.2",
    "jest-when": "^3.5.2",
    "multer": "^1.4.5-lts.1",
    "nock": "^13.2.9",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.20",
    "supertest": "^7.1.3",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.25.0",
    "webpack": "^5.74.0"
  },
  "jest": {
    "injectGlobals": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "resolver": "ts-jest-resolver",
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true,
          "diagnostics": {
            "ignoreCodes": [
              151002
            ]
          }
        }
      ]
    },
    "setupFiles": [
      "<rootDir>/test/setup/test-setup.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup/global-setup.ts"
    ],
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1",
      "^@/src/(.*)$": "<rootDir>/src/$1",
      "^src/(.*)$": "<rootDir>/src/$1",
      "^@/test/(.*)$": "<rootDir>/test/$1"
    },
    "coverageDirectory": "../coverage",
    "forceExit": true,
    "maxWorkers": 1,
    "testTimeout": 60000,
    "testEnvironment": "node"
  },
  "peerDependencies": {
    "bull": "^4.10.0"
  }
}
